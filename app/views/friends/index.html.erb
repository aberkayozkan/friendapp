<% if user_signed_in? %>

  <table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <th colspan="1"></th>
      </tr>
    </thead>

    <tbody>
      <% @friends.each do |friend| %>
      <% if friend.user== current_user %>
        <tr>
          <td>
            <%= link_to friend.first_name + ' ' + friend.last_name, friend %>
          </td>
          <td><%= friend.email %></td>
          <td><%= friend.phone %></td>
          <td><%= friend.twitter %></td>
          <td><%= link_to 'Delete', friend, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger btn-sm" %></td>
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Friend', new_friend_path , class: "btn btn-secondary" %>

<% else %>
  <div class="card">
    <div class="card-header">
      <h1>Welcome to the Friend App!</h1>
    </div>
    <div class="card-body">
      <ul>
        <li>You can add your friends in this web page. This page provides keep your friends name, email, phone and Twitter usernames. Feel free to add all of your friends!</li>

        <li>If you already have an account, please sign in to show, edit and remove any of your friends. If you don't, you can create your own account for free!  </li>
      </ul>
      <p>
        Enjoy!
      </p>
    </div>
  </div>
<% end %>